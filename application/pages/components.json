{
   "layout": "components",

   "areas": {
      "activities": [
         {
            "widget": "component-list-activity",
            "features": {
               "components": {
                  "url": "application/example/laxar-components.json",
                  "resource": "components"
               }
            }
         }
      ],

      "content": [
         {
            "widget": "component-browser-widget",
            "features": {
               "components": {
                  "resource": "components"
               },
               "details": {
                 "action": "showDetails",
                 "resource": "componentDetails",
                 "relation": "readme"
               }
            }
         }
      ],

      "popups": [
         {
           "widget": "amd:laxar-popup-widget",
           "id": "details",
           "features": {
             "open": {
               "onActions": [ "showDetails" ]
             },
             "closeIcon": {
               "enabled": true
             },
             "content": {
               "layout": "details"
             }
           }
         }
      ],

      "details.content": [
        {
          "widget":  "amd:laxar-markdown-display-widget",
          "id": "md",
          "features": {
            "markdown": {
              "resource": "componentDetails",
              "parameter": "anchor"
            }
          }
        }
      ]
   }
}
